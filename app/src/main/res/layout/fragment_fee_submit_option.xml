<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="main.erp.root.erp.main.erp.root.erp.StudentFragment.FeeSubmitOption">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:padding="2dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00BCD4"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="2dp"
                android:id="@+id/present_event"
                android:weightSum="2"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:id="@+id/img_Online_fee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cash"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    >
                    <TextView
                        android:id="@+id/txt_Online_Fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Online Pay\n Your FEE"
                        android:textSize="20sp"
                        android:textAllCaps="true"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e67e22"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:id="@+id/past_event">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:padding="5dp"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/present_event"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    >
                    <TextView
                        android:id="@+id/txt_Per_month"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Per Month \nFee Details"
                        android:textSize="20sp"
                        android:textAllCaps="true"
                        android:textColor="#fff"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>





    </LinearLayout>

</LinearLayout>

