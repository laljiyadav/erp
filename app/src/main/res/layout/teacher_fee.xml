<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Fees Details"
                android:textColor="#323C3E"
                android:paddingTop="5dp"
          android:gravity="center"
                android:textStyle="bold"
                android:paddingBottom="5dp"

                android:layout_column="0"
                android:id="@+id/teacherTitle" />
        </TableRow>






        <TableRow
            android:layout_width="fill_parent"
            android:background="@drawable/border_white"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Roll No"
                android:textColor="#323C3E"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="000785-1046532"
                android:textColor="#323C3E"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/studentRollNo"
                android:layout_column="7" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:background="@drawable/border_white"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name"
                android:textColor="#323C3E"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="9.42 mm"
                android:textColor="#323C3E"
                android:paddingTop="5dp"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/studentNameTeacher"
                android:layout_column="7" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:id="@+id/roww"
            android:background="@drawable/border_white"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Status"
                android:textColor="#323C3E"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="9.42 mm"
                android:textColor="#323C3E"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="end"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/statusFeesTeacher"
                android:layout_column="7" />

        </TableRow>

    </TableLayout>







</LinearLayout>